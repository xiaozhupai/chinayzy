<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/goldBg"
              android:orientation="vertical"
    >
    <include layout="@layout/common_action_bar"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/NongYe_Line"
        />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="149dp"
                android:background="@color/Background"
                >

                <ImageView
                    android:layout_width="30.5dp"
                    android:layout_height="32dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="13dp"
                    android:src="@mipmap/pic_money"
                    />

                <TextView
                    android:id="@+id/tv_goldRule"
                    android:layout_width="52dp"
                    android:layout_height="25dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="12dp"
                    android:layout_marginTop="13dp"
                    android:clickable="true"
                    android:drawableLeft="@mipmap/pic_what_pre"
                    android:gravity="right|center_vertical"
                    android:text="提现规则"
                    android:textColor="@color/goldDte"
                    android:textSize="10sp"
                    />

                <TextView
                    android:id="@+id/tv_canTakeNum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="60.5dp"
                    android:text="00.00"
                    android:textColor="@color/takeMoney"
                    android:textSize="44sp"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_canTakeNum"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="7dp"
                    android:text="(1积分=1元)"
                    android:textColor="@color/takeMoney"
                    android:textSize="11sp"
                    />
            </RelativeLayout>

            <Button
                android:id="@+id/bt_inPut"
                android:layout_width="332dp"
                android:layout_height="40dp"
                android:layout_marginTop="25dp"
                android:background="@mipmap/btn_inbg"
                android:text="充值"
                android:textColor="@color/Background"
                android:textSize="15sp"
                />

            <Button
                android:id="@+id/bt_outPut"
                android:layout_width="332dp"
                android:layout_height="39dp"
                android:layout_marginTop="12dp"
                android:background="@mipmap/btn_outbg"
                android:text="提现"
                android:textColor="@color/takeMoney"
                android:textSize="15sp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="积分暂时仅支持提现到支付宝"
                android:textColor="@color/Main_menuText"
                android:textSize="11sp"
                />
        </LinearLayout>
</LinearLayout>