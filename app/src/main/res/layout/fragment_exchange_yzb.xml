<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.chinayiz.chinayzy.ui.fragment.flexible.ExchangeYzbFragment"
    android:background="@color/white"
    android:orientation="vertical"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <ImageView
            android:id="@+id/iv_pic"
            android:layout_width="80dp"
            android:layout_height="80dp"

            android:layout_marginLeft="12dp"
            android:layout_marginTop="24dp"
            android:scaleType="centerCrop"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="15dp"
            >
            <TextView
                android:id="@+id/tv_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="2"
                android:textColor="#252525"
                android:textSize="13sp"

                />
            <TextView
                android:id="@+id/tv_param1"
                style="@style/award_item"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <TextView
                    android:id="@+id/tv_param2"
                    style="@style/award_item"/>
                <!--<ImageView-->
                    <!--android:id="@+id/iv_yzb_info"-->
                    <!--android:layout_width="wrap_content"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:src="@mipmap/icon_info"-->
                    <!--android:layout_gravity="center"-->
                    <!--android:paddingLeft="5dp"-->
                    <!--/>-->
            </LinearLayout>

            <TextView
                android:id="@+id/tv_param3"
                style="@style/award_item"
                />
            <TextView
                android:id="@+id/tv_param4"
                style="@style/award_item"
                />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/tv_submit"
        android:layout_width="74dp"
        android:layout_height="29dp"
        android:text="立即兑换"
        android:textSize="12sp"
        android:textColor="@color/white"
        android:background="@drawable/shape_corner_red"
        android:gravity="center"
        android:visibility="visible"
        android:layout_gravity="right"
        android:layout_marginTop="5dp"
        android:layout_marginRight="10dp"
        />


</LinearLayout>
