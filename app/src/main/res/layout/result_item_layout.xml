<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
    <ImageView
        android:id="@+id/iv_result_item_img"
        android:layout_width="72dp"
        android:layout_height="81dp"
        android:src="@mipmap/ic_launcher"
        android:layout_marginTop="13dp"
        android:layout_marginBottom="7dp"
        android:layout_marginLeft="5dp"
        android:scaleType="centerCrop"
        />

    <LinearLayout
        android:id="@+id/lv_before"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="14dp"
        android:layout_marginRight="13dp"
        android:layout_marginLeft="5dp"
        android:visibility="visible"
        >
        <TextView
            android:id="@+id/tv_result_item_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="鲜活波士顿大虾500G 1只 盒自营海鲜水产dsdsdsdsdsdsds"
            android:textColor="#252525"
            android:textSize="12sp"
            android:lines="2"
            />
        <TextView
            android:id="@+id/tv_result_item_kind"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="白色"
            android:layout_marginTop="9dp"
            android:textSize="11sp"
            android:textColor="#cecece"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="22dp"
            >
            <TextView
                android:id="@+id/tv_result_item_price"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="￥148.01"
                android:textColor="@color/red"
                android:textSize="14sp"
                />
            <TextView
                android:id="@+id/tv_result_item_num"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="right"
                android:text="×1"
                android:textSize="11sp"
                android:textColor="#acacac"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="2dp"
                android:layout_gravity="center_vertical"
                />
        </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>