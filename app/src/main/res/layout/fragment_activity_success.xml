<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".ui.fragment.mine.EvalueResultFragment"
    android:orientation="vertical"
    android:background="@color/basecolor"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:background="@color/white"
        >
        <!-- TODO: Update blank fragment layout -->
        <ImageView
            android:id="@+id/iv_result"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/img_activity_success"
            android:layout_marginTop="31dp"
            />
        <TextView
            android:id="@+id/tv_result"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="恭喜您,支付成功!请等待为您揭晓..."
            android:layout_marginTop="18dp"
            android:textSize="14sp"
            android:textColor="#505050"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_horizontal"
            >
            <TextView
                android:id="@+id/tv_to_others"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="立即邀请"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:layout_marginTop="37dp"
                android:background="@drawable/shape_corner_red"
                android:layout_marginBottom="129dp"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:clickable="true"
                />
            <TextView
                android:id="@+id/tv_to_others2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="返回首页"
                android:textColor="#ff3952"
                android:textSize="14sp"
                android:layout_marginTop="37dp"
                android:background="@drawable/shape_corner_red_solid"
                android:layout_marginBottom="129dp"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:clickable="true"
                android:visibility="visible"
                android:layout_marginLeft="10dp"
                />
        </LinearLayout>

    </LinearLayout>


</LinearLayout>
