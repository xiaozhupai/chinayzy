<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    >
    <View
        style="@style/Divider"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <com.chinayiz.chinayzy.views.CheckImageView
            android:id="@+id/iv_shopcart_item_radio"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@mipmap/radio_normal"
            android:paddingLeft="15dp"
            android:paddingRight="10dp"

            android:layout_gravity="center_vertical"
            />
        <ImageView
            android:id="@+id/iv_shopcart_item_img"
            android:layout_width="72dp"
            android:layout_height="81dp"
            android:src="@mipmap/ic_launcher"
            android:layout_marginTop="13dp"
            android:layout_marginBottom="7dp"
            android:scaleType="centerCrop"
            />
        <!--编辑前的VIEW-->
        <LinearLayout
            android:id="@+id/lv_before"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="14dp"
            android:layout_marginRight="13dp"
            android:layout_marginLeft="5dp"
            android:visibility="gone"
            >
            <TextView
                android:id="@+id/tv_shopcart_item_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="鲜活波士顿大虾500G 1只 盒自营海鲜水产dsdsdsdsdsdsds"
                android:textColor="#252525"
                android:textSize="12sp"
                android:lines="2"
                />
            <TextView
                android:id="@+id/tv_shopcart_item_kind"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="白色"
                android:layout_marginTop="9dp"
                android:textSize="11sp"
                android:textColor="#cecece"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <TextView
                    android:id="@+id/tv_shopcart_item_price"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="￥148.01"
                    android:textColor="@color/red"
                    android:textSize="14sp"
                    android:layout_marginTop="11dp"
                    />
                <TextView
                    android:id="@+id/tv_shopcart_item_num"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:gravity="right"
                    android:text="×1"
                    android:textSize="11sp"
                    android:textColor="#acacac"
                    android:layout_marginTop="11dp"
                    />
            </LinearLayout>

        </LinearLayout>
        <!--编辑后的VIEW-->
        <LinearLayout
            android:id="@+id/lv_after"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="14dp"
            android:layout_marginRight="13dp"
            android:layout_marginLeft="5dp"
            android:visibility="visible"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

                <ImageView
                    android:id="@+id/iv_left"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/img_left_remove"
                    android:background="@mipmap/img_bg_left"
                    android:paddingTop="14dp"
                    android:paddingBottom="14dp"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    />

                    <TextView
                        android:id="@+id/tv_center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1"
                        android:textColor="#828389"
                        android:textSize="12sp"
                        android:gravity="center"
                        android:background="@mipmap/img_bg_center"
                        />

                <ImageView
                    android:id="@+id/iv_right"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/img_right_add"
                    android:background="@mipmap/img_bg_right"
                    android:paddingTop="4dp"
                    android:paddingBottom="4dp"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    />
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/rl_standard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@mipmap/img_bg_corner"
                android:layout_marginTop="10dp"
                >
                <TextView
                    android:id="@+id/tv_standard"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="颜色;白色"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="9dp"
                    android:layout_centerVertical="true"
                    android:textColor="#828389"
                    android:textSize="12sp"
                    />
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:src="@mipmap/icon_arrow_boom"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginTop="11dp"
                    android:layout_marginRight="7dp"
                    />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>