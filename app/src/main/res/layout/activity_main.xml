<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/Background"
    tools:context="com.chinayiz.chinayzy.MainActivity">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:gravity="center"
        android:background="@mipmap/actionbar_bg"
        android:text="@string/app_name"
        android:textSize="18sp"
        android:textColor="@color/Background"
        />
    <com.bigkoo.convenientbanner.ConvenientBanner
        android:id="@+id/banner_MainPager"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@mipmap/banner"
        app:canLoop="true"
        />
    <LinearLayout
        android:layout_marginTop="18dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <LinearLayout
            android:id="@+id/btn_NongYe"
            style="@style/Main_itemMenuLayout"
            android:background="@mipmap/nongye_itembg"
            android:layout_marginRight="1.5dp"
            android:layout_marginLeft="11dp"
            >
            <ImageView
                android:layout_width="45.5dp"
                android:layout_height="41dp"
                android:src="@mipmap/icon_nongye"
                />

            <TextView
                style="@style/Main_itemMenuText"
                android:text="生态农业"
                />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/btn_CityWide"
            style="@style/Main_itemMenuLayout"
            android:background="@mipmap/citywide_itembg"
            android:layout_marginRight="1.5dp"
            android:layout_marginLeft="1.5dp"
            >
            <ImageView
                android:layout_width="46dp"
                android:layout_height="41dp"
                android:src="@mipmap/icon_citywide"
                />

            <TextView
                style="@style/Main_itemMenuText"
                android:text="亿众同城"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/btn_Store"
            style="@style/Main_itemMenuLayout"
            android:background="@mipmap/store_itembg"
            android:layout_marginRight="1.5dp"
            android:layout_marginLeft="1.5dp"
            >
            <ImageView
                android:layout_width="42.5dp"
                android:layout_height="41dp"
                android:src="@mipmap/icon_store"
                />
            <TextView
                style="@style/Main_itemMenuText"
                android:text="亿众商城"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/btn_LvYou"
            style="@style/Main_itemMenuLayout"
            android:background="@mipmap/im_itembg"
            android:layout_marginRight="11dp"
            android:layout_marginLeft="1.5dp"
            >
            <ImageView
                android:layout_width="40.5dp"
                android:layout_height="41dp"
                android:src="@mipmap/icon_lvyou"
                />
            <TextView
                style="@style/Main_itemMenuText"
                android:text="亿众旅游"
                />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="3dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <LinearLayout
            android:id="@+id/btn_im"
            style="@style/Main_itemMenuLayout"
            android:background="@mipmap/lvyou_itembg"
            android:layout_marginRight="1.5dp"
            android:layout_marginLeft="11dp"
            >
            <ImageView
                android:layout_width="35dp"
                android:layout_height="41.5dp"
                android:src="@mipmap/icon_im"
                />
            <TextView
                style="@style/Main_itemMenuText"
                android:text="个人中心"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/btn_ZhongChou"
            style="@style/Main_itemMenuLayout"
            android:background="@mipmap/zhongchou_itembg"
            android:layout_marginRight="1.5dp"
            android:layout_marginLeft="1.5dp"
            >
            <ImageView
                android:layout_width="41dp"
                android:layout_height="41dp"
                android:src="@mipmap/icon_zhongchou"
                />
            <TextView
                style="@style/Main_itemMenuText"
                android:text="亿众众筹"
                />
        </LinearLayout>
     <View
         android:layout_marginLeft="15.5dp"
         android:layout_weight="2"
         android:layout_width="0dp"
         android:layout_height="95dp"/>
    </LinearLayout>
</LinearLayout>
