<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/Background"
    >
    <!--生态农业首页推荐版块布局-->
    <View
        android:id="@+id/view_line"
        android:layout_width="match_parent"
        android:layout_height="7dp"
        android:background="@color/nYline"
        />
    <TextView
        android:id="@+id/tv_ThemTitle"
        android:layout_below="@id/view_line"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="12dp"
        android:text="@string/nongye_recommendBar"
        android:textColor="@color/NongYe_tuiJianBar"
        android:textSize="14sp"
        android:drawableLeft="@mipmap/pic_recommend"
        />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="95.5dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/iv_recommend_Item2"
        android:layout_toRightOf="@+id/iv_recommend_Item1"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_recommend_Item3"
            android:clickable="true"
            android:layout_width="0dp"
            android:scaleType="centerCrop"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/colorAccent"
            />
        <ImageView
            android:id="@+id/iv_recommend_Item4"
            android:layout_width="0dp"
            android:clickable="true"
            android:layout_height="match_parent"
            android:layout_marginLeft="1dp"
            android:scaleType="centerCrop"
            android:layout_marginRight="1dp"
            android:layout_weight="1"
            android:background="@color/md_material_blue_600"/>

        <ImageView
            android:id="@+id/iv_recommend_Item5"
            android:layout_width="0dp"
            android:clickable="true"
            android:scaleType="centerCrop"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/color_line"
            />

    </LinearLayout>
    <ImageView
        android:id="@+id/iv_recommend_Item2"
        android:layout_width="0dp"
        android:layout_height="75dp"
        android:clickable="true"
        android:scaleType="centerCrop"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/iv_recommend_Item1"
        android:layout_toEndOf="@+id/iv_recommend_Item1"
        android:layout_toRightOf="@+id/iv_recommend_Item1"
        android:background="@color/colorPrimary"/>

    <LinearLayout
        android:id="@+id/lv_comgoods"
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:layout_below="@id/iv_recommend_Item1"
        android:layout_marginTop="2dp"
        android:orientation="horizontal"
        >
        <!--生态农业首页精选推荐下面的商品列表（3个）-->
        <LinearLayout
            android:id="@+id/lv_comgoods1"
            style="@style/NongYe_Products"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="3.2dp"
            >

            <ImageView
                android:id="@+id/iv_comgoods1_icon"
                style="@style/NongYe_Products_iv"
                />

            <TextView
                android:id="@+id/tv_comgoods1_title"
                style="@style/NongYe_Products_tv"
                android:text="完全不占用任何空间的然后点击下More按钮，新的界面如下所示"
                />

            <TextView
                android:id="@+id/tv_comgoods1_price"
                style="@style/NongYe_Products_pricetv"
                android:text="00.00"
                />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/lv_comgoods2"
            style="@style/NongYe_Products"
            android:layout_marginLeft="3.2dp"
            android:layout_marginRight="3.2dp"
            >

            <ImageView
                android:id="@+id/iv_comgoods2_icon"
                style="@style/NongYe_Products_iv"
                />

            <TextView
                android:id="@+id/tv_comgoods2_title"
                style="@style/NongYe_Products_tv"
                android:text="完全不占用任何空间的。然后点击一下More按钮，新的界面如下所示"
                />

            <TextView
                android:id="@+id/tv_comgoods2_price"
                style="@style/NongYe_Products_pricetv"
                android:text="00.00"
                />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/lv_comgoods3"
            style="@style/NongYe_Products"
            android:layout_marginLeft="3.2dp"
            android:layout_marginRight="1dp"
            >

            <ImageView
                android:id="@+id/iv_comgoods3_icon"
                style="@style/NongYe_Products_iv"
                />

            <TextView
                android:id="@+id/tv_comgoods3_title"
                style="@style/NongYe_Products_tv"
                android:text="完全不占用任何空间的。然后点击一下More按钮，新的界面如下所示"
                />

            <TextView
                android:id="@+id/tv_comgoods3_price"
                style="@style/NongYe_Products_pricetv"
                android:text="00.00"
                />
        </LinearLayout>
    </LinearLayout>
    <TextView
        android:id="@+id/tv_ThemFragmentTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="12dp"
        android:layout_marginTop="12dp"
        android:layout_below="@+id/lv_comgoods"
        android:layout_centerHorizontal="true"
        android:drawableLeft="@mipmap/pic_feature"
        android:text="@string/nongye_featureBar"
        android:textColor="@color/NongYe_tuiJianBar"
        android:textSize="14sp"
        />
    <ImageView
        android:id="@+id/iv_recommend_Item1"
        android:clickable="true"
        android:layout_width="139dp"
        android:layout_height="170dp"
        android:scaleType="centerCrop"
        android:background="@color/NongYe_Tabtext"
        android:layout_below="@+id/tv_ThemTitle"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>
</RelativeLayout>


