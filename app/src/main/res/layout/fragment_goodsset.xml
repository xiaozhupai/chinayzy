<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/white"
        >
        <TextView
            android:id="@+id/tv_hot"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="热卖"
            android:textSize="14sp"
            android:gravity="center"
            android:textColor="@color/find_green_text"
            android:padding="10dp"
            android:layout_marginBottom="2dp"
            />

        <LinearLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            >
            <CheckBox
                android:id="@+id/cb_sale"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:src="@mipmap/icon_sort_down"
                android:button="@null"
                android:text="销量"
                android:textSize="14sp"
                android:textColor="@color/find_text"
                android:padding="10dp"
                android:gravity="center"
                android:drawableRight="@mipmap/icon_sort_normal"
                android:paddingRight="5dp"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            >
            <CheckBox
                android:id="@+id/cb_price"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:src="@mipmap/icon_sort_down"
                android:button="@null"
                android:text="价格"
                android:textColor="@color/find_text"
                android:textSize="14sp"
                android:padding="10dp"
                android:gravity="center"
                android:drawableRight="@mipmap/icon_sort_normal"
                android:paddingRight="5dp"
                />
        </LinearLayout>

    </LinearLayout>
<android.support.v7.widget.RecyclerView
    android:id="@+id/rv_goodsSet"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
</android.support.v7.widget.RecyclerView>
</LinearLayout>