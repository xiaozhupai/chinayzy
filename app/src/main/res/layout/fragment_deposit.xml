<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.chinayiz.chinayzy.ui.fragment.register.DepositFragment"
    android:background="@color/basecolor"

    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="请输入充值金额"
            android:textColor="#888787"
            android:textSize="13sp"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="12dp"
            />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:padding="12dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1350元"
                android:textColor="#505050"
                android:textSize="13sp"
                android:layout_alignParentRight="true"
                />

        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/basecolor"
            >
            <!--支付方式-->
            <RelativeLayout
                android:id="@+id/rl_payway_boom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="请选择支付方式"
                    android:textColor="#888787"
                    android:textSize="13sp"
                    android:layout_marginLeft="12dp"
                    android:layout_marginTop="12dp"
                    android:layout_marginBottom="12dp"
                    />

            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#dee2e4"

                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/lv_payway"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                >
                <ImageView
                    android:id="@+id/iv_pay_ali"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="32dp"
                    android:layout_marginTop="12dp"
                    android:layout_marginBottom="12dp"
                    android:src="@mipmap/icon_pay_ali"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="支付宝"
                    android:layout_toRightOf="@+id/iv_pay_ali"
                    android:textColor="#161616"
                    android:textSize="12sp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="16dp"
                    />
                <com.chinayiz.chinayzy.views.CheckImageView
                    android:id="@+id/iv_ali_pay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/radio_selected"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="13dp"
                    android:layout_marginRight="12dp"
                    android:clickable="true"
                    />
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#dee2e4"
                />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                >
                <ImageView
                    android:id="@+id/iv_pay_wechat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="32dp"
                    android:layout_marginTop="12dp"
                    android:layout_marginBottom="12dp"
                    android:src="@mipmap/icon_pay_wechat"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="微信"
                    android:layout_toRightOf="@+id/iv_pay_wechat"
                    android:textColor="#161616"
                    android:textSize="12sp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="16dp"
                    />
                <com.chinayiz.chinayzy.views.CheckImageView
                    android:id="@+id/iv_wechat_pay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/radio_normal"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="13dp"
                    android:layout_marginRight="12dp"
                    android:clickable="true"
                    />
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#dee2e4"
                />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_deposit_submit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="29dp"
            android:layout_marginRight="29dp"
            android:layout_marginTop="28dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/shape_corner_red"
            android:clickable="true"
            android:gravity="center"
            android:padding="16dp"
            android:textColor="#ffffff"
            android:text="确定充值"
            android:textSize="14sp"
            />
    </LinearLayout>



</LinearLayout>
