<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/Background"
    >

    <View
        android:id="@+id/top_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/NongYe_Line"
        />

    <ImageView
        android:id="@+id/iv_storeLogo"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:layout_below="@id/top_line"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="@mipmap/btn_type"
        android:scaleType="fitXY"/>

    <TextView
        android:id="@+id/tv_stareName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/iv_storeLogo"
        android:layout_marginTop="9dp"
        android:gravity="center"
        android:text="亿众自营店"
        android:textColor="@color/black"
        android:textSize="12sp"
        />

    <ImageView
        android:id="@+id/iv_brand"
        android:layout_width="70dp"
        android:layout_height="22dp"
        android:layout_below="@id/tv_stareName"
        android:layout_marginRight="6dp"
        android:layout_marginTop="19dp"
        android:layout_toLeftOf="@id/iv_storeLogo"
        android:clickable="true"
        android:padding="1dp"
        android:scaleType="fitXY"
        android:src="@mipmap/btn_brand"
        />

    <CheckBox
        android:id="@+id/btn_sign"
        android:layout_width="70dp"
        android:layout_height="21dp"
        android:layout_below="@id/tv_stareName"
        android:layout_marginBottom="30dp"
        android:layout_marginLeft="6dp"
        android:layout_marginTop="19dp"
        android:layout_toRightOf="@id/iv_storeLogo"
        android:button="@null"
        android:background="@drawable/btn_attention"
        />

    <RelativeLayout
        android:id="@+id/nv_goodsMenu1"
        android:layout_width="match_parent"
        android:layout_height="47dp"
        android:layout_below="@id/btn_sign"
        android:background="@color/Background"
        >

        <View
            android:id="@+id/low_line"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/NongYe_Line"
            />

        <TextView
            android:id="@+id/line"
            android:layout_width="1dp"
            android:layout_height="30dp"
            android:layout_below="@id/low_line"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="7dp"
            android:background="@color/NongYe_Line"
            android:gravity="center"/>

        <TextView
            android:id="@+id/tv_sort"
            android:layout_width="wrap_content"
            android:layout_height="44dp"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/low_line"
            android:layout_toLeftOf="@id/line"
            android:clickable="true"
            android:gravity="center"
            android:text="智能排序"
            android:textColor="@color/black"
            android:textSize="13sp"
            />

        <TextView
            android:id="@+id/tv_goodsType"
            android:layout_width="wrap_content"
            android:layout_height="44dp"
            android:layout_alignParentRight="true"
            android:layout_below="@id/low_line"
            android:layout_toRightOf="@id/line"
            android:clickable="true"
            android:gravity="center"
            android:text="全部商品"
            android:textColor="@color/black"
            android:textSize="13sp"
            />

        <ImageView
            android:id="@+id/iv_indicate"
            android:layout_width="wrap_content"
            android:layout_height="44dp"
            android:layout_alignParentRight="true"
            android:layout_below="@id/low_line"
            android:layout_marginRight="50dp"
            android:src="@mipmap/pull_low"
            />

        <View
            android:id="@+id/low_line1"
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:layout_below="@id/tv_goodsType"
            android:background="@color/NongYe_Line"
            />
    </RelativeLayout>
</RelativeLayout>