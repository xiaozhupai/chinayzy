<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    >
<ImageView
    android:id="@+id/iv_find_item_image"
    android:layout_width="match_parent"
    android:layout_height="147dp"
    android:src="@mipmap/ic_launcher"
    android:scaleType="centerCrop"
    android:layout_gravity="center"
    />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="10dp"
        >
        <TextView
            android:id="@+id/tv_find_item_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="dsdsdsdssdsdsdsdddddddddddddddddddddddddddddddddddddddddddddd"
            android:textColor="@color/black"
            android:textSize="13sp"
            android:lines="2"
            />
        <TextView
            android:id="@+id/tv_find_item_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
             android:textColor="@color/find_item_content"
            android:textSize="10sp"
            android:text="dsdsdsdssdsdsdsdddddddddddddddddddddddddddddddddddddddddddddd"
            android:lines="2"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="12dp"
            >
            <ImageView
                android:id="@+id/iv_find_item_logo"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@mipmap/ic_launcher"
                />
            <TextView
                android:id="@+id/tv_find_item_logo_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="亿众亿"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="5dp"
                android:textSize="10sp"
                android:textColor="@color/find_item_logo_text"
                android:lines="1"
                />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>