<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="12dp"
    >

    <TextView
        android:id="@+id/tv_scoreNum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:text="+50"
        android:textColor="@color/goldCO"
        android:textSize="19sp"
        />

    <TextView
        android:id="@+id/tv_score_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="分红-柬埔寨光谷消费"
        android:maxLines="1"
        android:ellipsize="end"
        android:textColor="@color/classifyText"
        android:textSize="13sp"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/tv_scoreNum"
        />
    <TextView
        android:id="@+id/tv_score_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_score_title"
        android:text="2016-05-16 17:54"
        android:layout_marginTop="9dp"
        android:layout_marginBottom="12dp"
        android:textColor="@color/goldDte"
        android:textSize="10sp"
        />


</RelativeLayout>