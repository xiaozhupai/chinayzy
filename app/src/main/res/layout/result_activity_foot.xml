<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="商品信息"
        android:layout_marginLeft="2dp"
        android:padding="10dp"
        android:textSize="14sp"
        android:textColor="#1c1c1c"
        />
   <View
       style="@style/Divider"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        android:paddingTop="13dp"
        android:paddingBottom="13dp"
        >
        <ImageView
            android:id="@+id/iv_pic"
            android:layout_width="72dp"
            android:layout_height="81dp"
            android:scaleType="centerCrop"

            />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="81dp"
            android:orientation="vertical"
            android:layout_marginRight="20dp"
            >
            <TextView
                android:id="@+id/tv_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="2"
                android:textColor="#252525"
                android:textSize="12sp"

                />
            <TextView
                android:id="@+id/tv_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="@color/red"

                android:layout_alignParentBottom="true"
                />
        </RelativeLayout>
    </LinearLayout>
    <View
        style="@style/Divider"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:paddingTop="13dp"
        android:paddingBottom="13dp"
        android:paddingRight="10dp"
        >
     <TextView
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:text="运费"
         android:textSize="13sp"
         android:textColor="#252525"
         />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="免运费"
            android:textSize="13sp"
            android:textColor="@color/red"
            android:layout_alignParentRight="true"
            />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/white"
            >


            <!--支付方式-->
            <RelativeLayout
                android:id="@+id/rl_payway_boom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="支付方式:"
                    android:textColor="#161616"
                    android:textSize="13sp"
                    android:layout_marginLeft="12dp"
                    android:layout_marginTop="16dp"
                    />
                <TextView
                    android:id="@+id/tv_pay_way"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="支付宝"
                    android:textSize="13sp"
                    android:textColor="#acacac"
                    android:layout_toLeftOf="@+id/iv_pay_right"
                    android:layout_marginTop="16dp"
                    android:layout_marginRight="15dp"
                    />
                <ImageView
                    android:id="@+id/iv_pay_right"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="12dp"
                    android:layout_marginTop="20dp"
                    android:layout_alignParentRight="true"
                    android:src="@mipmap/icon_arrow_boom"
                    />
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#dee2e4"
                android:layout_marginTop="16dp"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/lv_payway"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                >
                <ImageView
                    android:id="@+id/iv_pay_ali"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="32dp"
                    android:layout_marginTop="12dp"
                    android:layout_marginBottom="12dp"
                    android:src="@mipmap/icon_pay_ali"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="支付宝"
                    android:layout_toRightOf="@+id/iv_pay_ali"
                    android:textColor="#161616"
                    android:textSize="12sp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="16dp"
                    />
                <com.chinayiz.chinayzy.views.CheckImageView
                    android:id="@+id/iv_ali_pay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/radio_selected"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="13dp"
                    android:layout_marginRight="12dp"
                    android:clickable="true"
                    />
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#dee2e4"
                />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                >
                <ImageView
                    android:id="@+id/iv_pay_wechat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="32dp"
                    android:layout_marginTop="12dp"
                    android:layout_marginBottom="12dp"
                    android:src="@mipmap/icon_pay_wechat"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="微信"
                    android:layout_toRightOf="@+id/iv_pay_wechat"
                    android:textColor="#161616"
                    android:textSize="12sp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="16dp"
                    />
                <com.chinayiz.chinayzy.views.CheckImageView
                    android:id="@+id/iv_wechat_pay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/radio_normal"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="13dp"
                    android:layout_marginRight="12dp"
                    android:clickable="true"
                    />
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#dee2e4"

                />

            <RelativeLayout
                android:id="@+id/rl_yzb"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:visibility="gone"
                >
                <ImageView
                    android:id="@+id/iv_pay_yzb"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="32dp"
                    android:layout_marginTop="12dp"
                    android:layout_marginBottom="12dp"
                    android:src="@mipmap/icon_chinayzy_yzb"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="亿众币"
                    android:layout_toRightOf="@+id/iv_pay_yzb"
                    android:textColor="#161616"
                    android:textSize="12sp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="16dp"
                    />
                <com.chinayiz.chinayzy.views.CheckImageView
                    android:id="@+id/iv_yzb_pay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/radio_normal"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="13dp"
                    android:layout_marginRight="12dp"
                    android:clickable="true"
                    />
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#dee2e4"
                android:layout_marginBottom="20dp"
                />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>