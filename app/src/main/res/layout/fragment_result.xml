<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.fragment.cart.ResultFragment"
    android:background="@color/basecolor"
    android:id="@+id/result_list"
    >
    <ListView
        android:id="@+id/lv_result"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/rl_boom"
        android:dividerHeight="5dp"
        android:divider="@color/basecolor"
        >
    </ListView>
    <RelativeLayout
        android:id="@+id/rl_boom"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        >
        <View
            style="@style/Divider"/>
        <TextView
            android:id="@+id/tv_result_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="总计:￥286.20"
            android:textSize="14sp"
            android:textColor="#ff3951"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="12dp"
            android:layout_marginBottom="16dp"
            />
        <TextView
            android:id="@+id/tv_result_submit"
            android:layout_width="124dp"
            android:layout_height="wrap_content"
            android:text="确认支付"
            android:textSize="15sp"
            android:textColor="@color/white"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:paddingTop="16dp"
            android:paddingBottom="16dp"
            android:background="#ff3951"
            android:clickable="true"
            />
    </RelativeLayout>

</RelativeLayout>
