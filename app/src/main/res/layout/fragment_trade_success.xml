<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.fragment.mine.TradeSuccessFragment"
    android:background="@color/basecolor"
    android:orientation="vertical"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:background="@color/white"
        >
        <!-- TODO: Update blank fragment layout -->
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/img_trade_success"
            android:layout_marginTop="31dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="交易成功!卖家将收到您的付款"
            android:layout_marginTop="18dp"
            android:textSize="14sp"
            android:textColor="#505050"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <LinearLayout
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:paddingLeft="75dp"
                >
                <TextView
                    android:id="@+id/tv_to_others1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="再去逛逛"
                    android:textColor="#ff3952"
                    android:textSize="14sp"
                    android:layout_marginTop="37dp"
                    android:background="@drawable/shape_corner_red_solid"
                    android:layout_marginBottom="129dp"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:clickable="true"

                    />
            </LinearLayout>

            <LinearLayout
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:paddingRight="75dp"
                android:gravity="right"
                >
                <TextView
                    android:id="@+id/tv_to_others2"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="再去逛逛"
                    android:textColor="#ff3952"
                    android:textSize="14sp"
                    android:layout_marginTop="37dp"
                    android:background="@drawable/shape_corner_red_solid"
                    android:layout_marginBottom="129dp"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:clickable="true"
                    />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>


</LinearLayout>
