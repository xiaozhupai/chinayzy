<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:gravity="center_horizontal"
              android:background="@color/Background"
              android:orientation="vertical">
    <!--生态农业首页特色购主题-->

    <ImageView
        android:id="@+id/iv_themeIcon"
        android:layout_width="match_parent"
        android:layout_height="105dp"
        android:scaleType="centerCrop"
        android:clickable="true"
        android:src="@mipmap/tese"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="183dp"
        android:layout_below="@id/iv_themeIcon"
        android:layout_marginTop="2dp"
        android:orientation="horizontal"
        >
        <!--生态农业首页精选推荐下面的商品列表（3个）-->
        <LinearLayout
            android:id="@+id/lv_comgoods1"
            style="@style/NongYe_features"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="3.2dp"
            >

            <ImageView
                android:id="@+id/iv_comgoods1_icon"
                style="@style/NongYe_Products_iv"
                />

            <TextView
                android:id="@+id/tv_comgoods1_title"
                style="@style/NongYe_Products_tv"
                android:text="完全不占用任何空间的然后点击下More按钮，新的界面如下所示"
                />

            <TextView
                android:id="@+id/tv_comgoods1_price"
                style="@style/NongYe_Products_pricetv"
                android:text="1252"
                />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/lv_comgoods2"
            style="@style/NongYe_features"
            android:layout_marginLeft="3.2dp"
            android:layout_marginRight="3.2dp"
            >

            <ImageView
                android:id="@+id/iv_comgoods2_icon"
                style="@style/NongYe_Products_iv"
                />

            <TextView
                android:id="@+id/tv_comgoods2_title"
                style="@style/NongYe_Products_tv"
                android:text="完全不占用任何空间的。然后点击一下More按钮，新的界面如下所示"
                />

            <TextView
                android:id="@+id/tv_comgoods2_price"
                style="@style/NongYe_Products_pricetv"
                android:text="1252"
                />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/lv_comgoods3"
            style="@style/NongYe_features"
            android:layout_marginLeft="3.2dp"
            android:layout_marginRight="1dp"
            >

            <ImageView
                android:id="@+id/iv_comgoods3_icon"
                style="@style/NongYe_Products_iv"
                />

            <TextView
                android:id="@+id/tv_comgoods3_title"
                style="@style/NongYe_Products_tv"
                android:text="完全不占用任何空间的。然后点击一下More按钮，新的界面如下所示"
                />

            <TextView
                android:id="@+id/tv_comgoods3_price"
                style="@style/NongYe_Products_pricetv"
                android:text="1252"
                />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>