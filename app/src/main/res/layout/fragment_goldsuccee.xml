<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/goldBg"
              android:gravity="center_horizontal"
    >
    <include layout="@layout/common_action_bar"/>
    <ImageView
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_marginTop="21dp"
        android:src="@mipmap/pic_finish"
        />
    <TextView
        android:id="@+id/tv_result"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="13dp"
        android:gravity="center"
        android:textSize="14sp"
        android:text="恭喜您充值成功！"
        android:textColor="@color/appTextGray"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="43dp"
        android:background="@color/Background"
        android:layout_marginTop="25.5dp"
        android:orientation="horizontal"
        android:paddingRight="12dp"
        android:paddingLeft="12dp"
        >
    <TextView
        android:id="@+id/tv_titel"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:text="支付宝账号"
        android:textSize="14sp"
        android:textColor="@color/oldGray"
        />
        <TextView
            android:id="@+id/tv_value"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical|end"
            android:text="18629012030"
            android:textSize="14sp"
            android:textColor="@color/oldGray"
            />
    </LinearLayout>
    <include layout="@layout/view_line"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="43dp"
        android:background="@color/Background"
        android:orientation="horizontal"
        android:paddingRight="12dp"
        android:paddingLeft="12dp"
        >
        <TextView
            android:id="@+id/tv_titel1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="充值金额"
            android:textSize="14sp"
            android:textColor="@color/oldGray"
            />
        <TextView
            android:id="@+id/tv_value1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical|end"
            android:text="￥400.00"
            android:textSize="14sp"
            android:textColor="@color/oldGray"
            />
    </LinearLayout>
    <Button
        android:id="@+id/bt_inPut"
        android:layout_width="332dp"
        android:layout_height="40dp"
        android:layout_marginTop="28dp"
        android:background="@mipmap/btn_inbg"
        android:text="确认"
        android:layout_gravity="center_horizontal"
        android:textColor="@color/Background"
        android:textSize="15sp">
    </Button>
</LinearLayout>