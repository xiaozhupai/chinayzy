<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.chinayiz.chinayzy.ui.activity.MineActivity"
    android:background="#efeff4"
     android:orientation="vertical"
    >

    <include
        android:id="@+id/head"
        layout="@layout/common_action_bar"/>
    <FrameLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <com.chinayiz.chinayzy.views.PullToRefreshLayout
        android:id="@+id/pullrefresh"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
    <include layout="@layout/refresh_head"/>
    <com.chinayiz.chinayzy.views.PullableScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:id="@+id/layout_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="178dp"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                android:background="#f52a44"
                android:clickable="true"
                >
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="27dp"
                    >
                    <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        >
                        <ImageView
                            android:id="@+id/iv_mine_user_logo"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@mipmap/img_user"
                            />
                        <ImageView
                            android:id="@+id/iv_mine_user_sex"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@mipmap/icon_man_sex"
                            android:layout_gravity="right|bottom"
                            />
                    </FrameLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="15dp"
                        >
                        <TextView
                            android:id="@+id/tv_user_username"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="fdsdsdfd"
                            android:textColor="#fefefe"
                            android:textSize="16sp"
                            android:layout_marginRight="8dp"
                            />
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@mipmap/back_arrow_white"
                            android:layout_gravity="center_vertical"
                            />
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="5dp"
                >
                <RelativeLayout
                    android:id="@+id/rl_user_all_order"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:paddingTop="15dp"
                    android:paddingLeft="12dp"
                    android:paddingBottom="15dp"
                    android:background="@color/white"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="全部订单"
                        android:textColor="#051b28"
                        android:textSize="14sp"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="查看全部订单"
                        android:textColor="#a6a6a6"
                        android:textSize="11sp"
                        android:layout_toLeftOf="@+id/iv_arrow_right"
                        android:layout_marginRight="6dp"
                        />
                    <ImageView
                        android:id="@+id/iv_arrow_right"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/icon_back_arrow"
                        android:layout_alignParentRight="true"
                        android:paddingRight="12dp"
                        />
                </RelativeLayout>

                <View
                    style="@style/Divider"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"

                android:paddingBottom="14dp"
                android:background="@color/white"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingTop="15dp"
                    >

                    <LinearLayout
                        android:id="@+id/lv_wait_pay"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center_horizontal"
                        android:clickable="true"
                        >
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@mipmap/icon_wait_pay"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="待付款"
                            android:textColor="#505050"
                            android:textSize="11sp"
                            android:layout_marginTop="9dp"
                            />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/lv_wait_goods"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center_horizontal"
                        android:clickable="true"
                        >
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@mipmap/icon_wait_goods"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="待发货"
                            android:textColor="#505050"
                            android:textSize="11sp"
                            android:layout_marginTop="9dp"
                            />
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/lv_wait_accept_goods"
                        android:clickable="true"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center_horizontal"
                        >
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@mipmap/icon_wait_accept_goods"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="待收货"
                            android:textColor="#505050"
                            android:textSize="11sp"
                            android:layout_marginTop="9dp"
                            />
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/lv_after_sale"
                        android:clickable="true"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center_horizontal"
                        >
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@mipmap/icon_after_sale"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="售后"
                            android:textColor="#505050"
                            android:textSize="11sp"
                            android:layout_marginTop="9dp"
                            />
                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="5dp"
                android:background="@color/white"
                android:layout_marginBottom="83dp"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="我的工具"
                    android:textColor="#051b28"
                    android:textSize="14sp"
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="12dp"
                    android:layout_marginBottom="15dp"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="#efeff4"
                    >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="1dp"
                        >
                        <LinearLayout
                            android:id="@+id/lv_mine_keep"
                            android:clickable="true"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:gravity="center_horizontal"
                            android:background="@color/white"
                            >
                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@mipmap/icon_mine_keep"
                                android:layout_marginTop="23dp"
                                />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="宝贝收藏"
                                android:textColor="#505050"
                                android:textSize="11sp"
                                android:layout_marginBottom="25dp"
                                android:layout_marginTop="13dp"
                                />
                        </LinearLayout>
                        <LinearLayout
                            android:id="@+id/lv_mine_content_keep"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:gravity="center_horizontal"
                            android:layout_marginLeft="1dp"
                            android:background="@color/white"
                            >
                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@mipmap/icon_mine_content_keep"
                                android:layout_marginTop="23dp"
                                />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="内容收藏"
                                android:textColor="#505050"
                                android:textSize="11sp"
                                android:layout_marginBottom="25dp"
                                android:layout_marginTop="13dp"
                                />
                        </LinearLayout>
                        <LinearLayout
                            android:id="@+id/lv_mine_step"
                            android:clickable="true"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:gravity="center_horizontal"
                            android:layout_marginLeft="1dp"
                            android:background="@color/white"
                            >
                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@mipmap/icon_mine_step"
                                android:layout_marginTop="23dp"
                                />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="我的足迹"
                                android:textColor="#505050"
                                android:textSize="11sp"
                                android:layout_marginBottom="25dp"
                                android:layout_marginTop="13dp"
                                />
                        </LinearLayout>
                        <LinearLayout
                            android:id="@+id/lv_mine_shop_car"
                            android:clickable="true"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:gravity="center_horizontal"
                            android:layout_marginLeft="1dp"
                            android:background="@color/white"
                            >
                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@mipmap/icon_mine_shop_car"
                                android:layout_marginTop="23dp"
                                />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="购物车"
                                android:textColor="#505050"
                                android:textSize="11sp"
                                android:layout_marginBottom="25dp"
                                android:layout_marginTop="13dp"
                                />
                        </LinearLayout>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="1dp"
                        >
                        <LinearLayout
                            android:id="@+id/lv_mine_scores"
                            android:clickable="true"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:gravity="center_horizontal"
                            android:background="@color/white"
                            >
                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@mipmap/icon_mine_scores"
                                android:layout_marginTop="23dp"
                                />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="我的积分"
                                android:textColor="#505050"
                                android:textSize="11sp"
                                android:layout_marginBottom="25dp"
                                android:layout_marginTop="13dp"
                                />
                        </LinearLayout>
                        <LinearLayout
                            android:id="@+id/lv_mine_server"
                            android:clickable="true"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:gravity="center_horizontal"
                            android:layout_marginLeft="1dp"
                            android:background="@color/white"
                            >
                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@mipmap/icon_mine_server"
                                android:layout_marginTop="23dp"
                                />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="消息中心"
                                android:textColor="#505050"
                                android:textSize="11sp"
                                android:layout_marginBottom="25dp"
                                android:layout_marginTop="13dp"
                                />
                        </LinearLayout>
                        <LinearLayout
                            android:id="@+id/lv_mine_suggest"
                            android:clickable="true"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:gravity="center_horizontal"
                            android:layout_marginLeft="1dp"
                            android:background="@color/white"
                            >
                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@mipmap/icon_mine_suggest"
                                android:layout_marginTop="23dp"
                                />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="意见反馈"
                                android:textColor="#505050"
                                android:textSize="11sp"
                                android:layout_marginBottom="25dp"
                                android:layout_marginTop="13dp"
                                />
                        </LinearLayout>
                        <LinearLayout
                            android:id="@+id/lv_mine_setting"
                            android:clickable="true"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:gravity="center_horizontal"
                            android:layout_marginLeft="1dp"
                            android:background="@color/white"
                            >
                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@mipmap/icon_mine_setting"
                                android:layout_marginTop="23dp"
                                />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="设置"
                                android:textColor="#505050"
                                android:textSize="11sp"
                                android:layout_marginBottom="25dp"
                                android:layout_marginTop="13dp"
                                />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </com.chinayiz.chinayzy.views.PullableScrollView>
    <include
        android:id="@+id/loadlayout"
        layout="@layout/load_more"/>
</com.chinayiz.chinayzy.views.PullToRefreshLayout>
    </FrameLayout>
</LinearLayout>