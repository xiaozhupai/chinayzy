<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.chinayiz.chinayzy.ui.fragment.register.RegisterInfoFragment"
    android:background="@color/white"
    >
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/white"
        android:layout_marginLeft="17dp"
        android:layout_marginRight="17dp"
        >
        <LinearLayout
            style="@style/Registerinfo_linerlayout"
            >
            <LinearLayout
                style="@style/Registerinfo_left_linerlayout"
                >
                <TextView
                    style="@style/Registerinfo_left_text"
                    android:text="昵称"
                    />
                <TextView
                   style="@style/Registerinfo_left_star"
                    />
            </LinearLayout>
           <EditText
               android:id="@+id/et_nickname"
             style="@style/Registerinfo_EditText"
               android:hint="请输入昵称"

               />
        </LinearLayout>
        <View
           style="@style/Divider"/>
        <LinearLayout
            style="@style/Registerinfo_linerlayout"
            >
            <LinearLayout
                style="@style/Registerinfo_left_linerlayout"
                >
                <TextView
                    style="@style/Registerinfo_left_text"
                    android:text="姓名"
                    />
                <TextView
                    style="@style/Registerinfo_left_star"
                    />
            </LinearLayout>
            <EditText
                android:id="@+id/et_username"
                style="@style/Registerinfo_EditText"
                android:hint="请输入姓名"

                />
        </LinearLayout>
        <View
            style="@style/Divider"/>
        <LinearLayout
            style="@style/Registerinfo_linerlayout"
            >
            <LinearLayout
                style="@style/Registerinfo_left_linerlayout"
                >
                <TextView
                    style="@style/Registerinfo_left_text"
                    android:text="性别"
                    />
                <TextView
                    style="@style/Registerinfo_left_star"
                    />
            </LinearLayout>
            <EditText
                android:id="@+id/et_sex"
                style="@style/Registerinfo_EditText"
                android:hint="请选择性别"
             android:focusable="false"
                />
        </LinearLayout>
        <View
            style="@style/Divider"/>
        <LinearLayout
            style="@style/Registerinfo_linerlayout"
            >
            <LinearLayout
                style="@style/Registerinfo_left_linerlayout"
                >
                <TextView
                    style="@style/Registerinfo_left_text"
                    android:text="出生年月"
                    />
                <TextView
                    style="@style/Registerinfo_left_star"
                    />
            </LinearLayout>
            <EditText
                android:id="@+id/et_birth"
                style="@style/Registerinfo_EditText"
                android:hint="请选择出生年月"
               android:focusable="false"
                />
        </LinearLayout>
        <View
            style="@style/Divider"/>
        <LinearLayout
            style="@style/Registerinfo_linerlayout"
            >
            <LinearLayout
                style="@style/Registerinfo_left_linerlayout"
                >
                <TextView
                    style="@style/Registerinfo_left_text"
                    android:text="身份证号"
                    />
                <TextView
                    style="@style/Registerinfo_left_star"
                    />
            </LinearLayout>
            <EditText
                android:id="@+id/et_card"
                style="@style/Registerinfo_EditText"
                android:hint="请输入身份证号"
                android:inputType="number"
                android:maxLength="18"
                />
        </LinearLayout>
        <View
            style="@style/Divider"/>
        <LinearLayout
            style="@style/Registerinfo_linerlayout"
            >
            <LinearLayout
                style="@style/Registerinfo_left_linerlayout"
                >
                <TextView
                    style="@style/Registerinfo_left_text"
                    android:text="常住地"
                    />

            </LinearLayout>
            <EditText
                android:id="@+id/et_address"
                style="@style/Registerinfo_EditText"
                android:hint="请选择常住地"
            android:focusable="false"
                />
        </LinearLayout>
        <View
            style="@style/Divider"/>
        <LinearLayout
            style="@style/Registerinfo_linerlayout"
            >
            <LinearLayout
                style="@style/Registerinfo_left_linerlayout"
                >
                <TextView
                    style="@style/Registerinfo_left_text"
                    android:text="婚姻状况"
                    />
            </LinearLayout>
            <EditText
                android:id="@+id/et_marriage"
                style="@style/Registerinfo_EditText"
                android:hint="请选择"
                android:focusable="false"
                />
        </LinearLayout>
        <View
            style="@style/Divider"/>
        <LinearLayout
            style="@style/Registerinfo_linerlayout"
            >
            <LinearLayout
                style="@style/Registerinfo_left_linerlayout"
                >
                <TextView
                    style="@style/Registerinfo_left_text"
                    android:text="身高(cm)"
                    />
            </LinearLayout>
            <EditText
                android:id="@+id/et_height"
                style="@style/Registerinfo_EditText"
                android:hint="请输入身高"
              android:layout_marginRight="20dp"

                />

        </LinearLayout>
        <View
            style="@style/Divider"/>
        <LinearLayout
            style="@style/Registerinfo_linerlayout"
            >
            <LinearLayout
                style="@style/Registerinfo_left_linerlayout"
                >
                <TextView
                    style="@style/Registerinfo_left_text"
                    android:text="体重(kg)"
                    />
            </LinearLayout>
            <EditText
                android:id="@+id/et_weight"
                style="@style/Registerinfo_EditText"
                android:hint="请输入体重"

                />

        </LinearLayout>
        <View
            style="@style/Divider"/>
        <LinearLayout
            style="@style/Registerinfo_linerlayout"
            >
            <LinearLayout
                style="@style/Registerinfo_left_linerlayout"
                >
                <TextView
                    style="@style/Registerinfo_left_text"
                    android:text="学历"
                    />
            </LinearLayout>
            <EditText
                android:id="@+id/et_education"
                style="@style/Registerinfo_EditText"
                android:hint="请输入学历"
                android:focusable="false"
                />
        </LinearLayout>
        <View
            style="@style/Divider"/>
        <LinearLayout
            style="@style/Registerinfo_linerlayout"
            >
            <LinearLayout
                style="@style/Registerinfo_left_linerlayout"
                >
                <TextView
                    style="@style/Registerinfo_left_text"
                    android:text="政治面貌"
                    />
            </LinearLayout>
            <EditText
                android:id="@+id/et_policatical"
                style="@style/Registerinfo_EditText"
                android:hint="请选择政治面貌"
                android:focusable="false"
                />
        </LinearLayout>
        <View
            style="@style/Divider"/>
        <ImageView
            android:id="@+id/iv_card"
            android:layout_width="197dp"
            android:layout_height="120dp"
            android:layout_gravity="center"
            android:src="@mipmap/bg_img_card"
            android:layout_marginTop="24dp"
            android:scaleType="centerCrop"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="点击上传身份证人像面"
            android:layout_gravity="center_horizontal"
            android:textSize="14sp"
            android:textColor="#515151"
            android:layout_marginTop="12dp"
            />
        <ImageView
            android:id="@+id/iv_card_back"
            android:layout_width="197dp"
            android:layout_height="120dp"
            android:layout_gravity="center"
            android:layout_marginTop="25dp"
            android:src="@mipmap/bg_img_card_background"
            android:scaleType="centerCrop"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="点击上传身份证国徽面"
            android:layout_gravity="center_horizontal"
            android:textSize="14sp"
            android:textColor="#515151"
            android:layout_marginTop="12dp"
            />
        <TextView
            android:id="@+id/tv_register_submit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="29dp"
            android:layout_marginRight="29dp"
            android:layout_marginTop="56dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/shape_corner_red"
            android:clickable="true"
            android:gravity="center"
            android:padding="16dp"
            android:textColor="#ffffff"
            android:text="注册"
            android:textSize="14sp"
            />
    </LinearLayout>
    </ScrollView>
</LinearLayout>
