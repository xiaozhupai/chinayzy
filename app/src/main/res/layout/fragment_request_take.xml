<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/goldBg"
    >

    <include layout="@layout/common_action_bar"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/rl_ActionBar"
        android:layout_margin="12dp"
        android:textSize="11sp"
        android:textColor="@color/find_item_logo_text"
        android:text="每月10、20日可提现"
        android:id="@+id/textView3"/>
    <TextView
        android:layout_below="@+id/rl_ActionBar"
        android:layout_marginTop="34dp"
        android:gravity="center_vertical"
        android:paddingLeft="12dp"
        android:background="@color/Background"
        android:layout_width="90dp"
        android:textColor="@color/takeMoney"
        android:layout_height="42dp"
        android:textSize="14sp"
        android:text="支付宝账号"
        android:id="@+id/textView4"/>
    <TextView
        android:layout_below="@+id/rl_ActionBar"
        android:layout_marginTop="76.5dp"
        android:gravity="center_vertical"
        android:paddingLeft="12dp"
        android:background="@color/Background"
        android:layout_width="90dp"
        android:textSize="14sp"
        android:textColor="@color/takeMoney"
        android:layout_height="42dp"
        android:text="提现金额"
        android:id="@+id/textView2"/>
    <TextView
        android:layout_below="@+id/rl_ActionBar"
        android:layout_marginTop="161.5dp"
        android:gravity="center_vertical"
        android:paddingLeft="12dp"
        android:background="@color/Background"
        android:layout_width="90dp"
        android:textColor="@color/takeMoney"
        android:layout_height="42dp"
        android:text="验证码"
        android:id="@+id/textView"/>
    <TextView
        android:layout_below="@+id/rl_ActionBar"
        android:layout_marginTop="119dp"
        android:gravity="center_vertical"
        android:paddingLeft="12dp"
        android:background="@color/Background"
        android:layout_width="90dp"
        android:textColor="@color/takeMoney"
        android:layout_height="42dp"
        android:text="手机号码"
        android:id="@+id/textView5"/>
    <EditText
        android:id="@+id/edit_alpayId"
        android:layout_width="42dp"
        android:layout_height="wrap_content"
        android:background="@color/Background"
        android:gravity="center_vertical"
        android:maxLines="1"
        android:paddingLeft="5dp"
        android:hint="支付宝账号"
        android:textSize="14sp"
        android:ems="10"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/textView4"
        android:layout_alignBottom="@+id/textView4"
        android:layout_alignTop="@+id/textView4"/>
    <EditText
        android:id="@+id/edit_money"
        android:layout_width="42dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/textView2"
        android:paddingLeft="5dp"
        android:hint="提现金额（元）"
        android:textSize="14sp"
        android:layout_toEndOf="@+id/textView2"
        android:background="@color/Background"
        android:gravity="center_vertical"

        android:layout_alignBottom="@+id/textView2"/>
    <EditText
        android:id="@+id/edit_phoneNumb"
        android:layout_width="wrap_content"
        android:layout_height="42dp"
        android:paddingLeft="5dp"
        android:ems="10"
        android:hint="手机号码"
        android:textSize="14sp"
        android:background="@color/Background"
        android:gravity="center_vertical"
        android:inputType="number"
        android:maxLength="11"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/textView5"
        android:layout_alignTop="@+id/textView5"/>
    <EditText
        android:id="@+id/edit_verifyNumb"
        android:layout_width="wrap_content"
        android:layout_height="42dp"
        android:paddingLeft="5dp"
        android:ems="10"
        android:hint="短信验证码"
        android:textSize="14sp"
        android:background="@color/Background"
        android:gravity="center_vertical"
        android:inputType="number"
        android:maxLength="6"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/textView"
        android:layout_alignTop="@+id/textView"/>
    <Button
        android:id="@+id/btn_sendMSG"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:text="获取验证码"
        android:textSize="14sp"
        android:textColor="@color/classifItem"
        android:background="@drawable/btn_shape"
        android:layout_marginRight="12dp"
        android:layout_marginTop="8.5dp"
        android:layout_alignParentEnd="true"
        android:layout_below="@id/edit_phoneNumb"
        />
    <Button
        android:id="@+id/bt_affirm"
        android:layout_width="332dp"
        android:layout_height="40dp"
        android:layout_marginTop="25dp"
        android:background="@mipmap/btn_inbg"
        android:text="确认提现"
        android:layout_below="@id/edit_verifyNumb"
        android:layout_centerHorizontal="true"
        android:textColor="@color/Background"
        android:textSize="15sp"
        />
</RelativeLayout>