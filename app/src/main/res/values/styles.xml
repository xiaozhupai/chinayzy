<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimAmount">0.6</item>
    </style>

    <style name="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1px</item>
        <item name="android:background">#D8D8D8</item>
    </style>

    <style name="Divider.Vertical" parent="Divider">
        <item name="android:layout_width">1px</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Image_arrow">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:src">@mipmap/icon_back_arrow</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_marginRight">12dp</item>
        <item name="android:layout_centerVertical">true</item>
    </style>

    <style name="Person_left_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>

        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#505050</item>
        <item name="android:layout_marginTop">14dp</item>
        <item name="android:layout_marginBottom">14dp</item>
        <item name="android:layout_marginLeft">12dp</item>
    </style>
    <style name="Person_right_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#b9b9b9</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginRight">6dp</item>
    </style>

    <style name="anim_popup_dir">
        <item name="android:windowEnterAnimation">@anim/slide_in</item>
        <item name="android:windowExitAnimation">@anim/slide_out</item>
    </style>

   <!--生态农业底部导航栏（RadioButton）-->
    <style name="nav_rb_style" >
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:textColor">@drawable/nav_menu_tv</item>
        <item name="android:textSize">10sp</item>
        <item name="android:button">@null</item>
    </style>
    <!--生态农业首页类型菜单按钮文字（TextView）-->
    <style name="NongYe_tv_TypeMenu">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/NongYe_TyepMenu</item>
        <item name="android:textSize">10sp</item>
        <item name="android:layout_marginTop">8dp</item>
    </style>
    <!--生态农业首页类型菜单按钮图片(ImageView)-->
    <style name="NongTe_iv_TypeMenu">
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_marginTop">16dp</item>
    </style>
    <!--生态农业首页类型菜单布局(LinearLayout)-->
    <style name="NongTe_layout_TypeMenu">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:clickable">true</item>
    </style>

    <!--商城首页item菜单布局（LinearLayout）-->
    <style name="Main_itemMenuLayout">
        <item name="android:clickable">true</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">95dp</item>
        <item name="android:orientation">vertical</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:paddingTop">18dp</item>
    </style>
    <!--商城首页item菜单文字（TextView）-->
    <style name="Main_itemMenuText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">14dp</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/Main_menuText</item>
    </style>
    <!--生态农业首页精选推荐横向商品宫格布局（LinearLayout）-->
    <style name="NongYe_Products">
        <item name="android:clickable">true</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@drawable/nongyr_home_item</item>
        <item name="android:orientation">vertical</item>
    </style>
    <!--生态农业首页精选推荐横向商品宫格布局（LinearLayout）-->
    <style name="NongYe_features">
        <item name="android:layout_below">@id/iv_themeIcon</item>
        <item name="android:clickable">true</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_marginTop">2dp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">163dp</item>
        <item name="android:orientation">vertical</item>
    </style>
    <!--生态农业首页横向商品图片（imagerView）-->
    <style name="NongYe_Products_iv">
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_marginRight">1dp</item>
        <item name="android:layout_marginLeft">1dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:scaleType">centerCrop</item>
    </style>
    <!--生态农业首页横向商品标题（textView）-->
    <style name="NongYe_Products_tv">
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:layout_marginRight">5dp</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/NongYe_home_goodsText</item>
        <item name="android:textSize">12sp</item>
        <item name="android:maxLength">15</item>
    </style>
    <!--生态农业首页横向商品价格（textView）-->
    <style name="NongYe_Products_pricetv">
        <item name="android:layout_marginLeft">3dp</item>
        <item name="android:layout_marginTop">3dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/NongYe_home_priceText</item>
        <item name="android:textSize">15sp</item>
        <item name="android:drawableLeft">@mipmap/icon_rmb</item>
        <item name="android:maxLines">1</item>
    </style>
    <!--商品详情页商品提供服务描述（TextView）-->
    <style name="Goods_serviceTv">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/Goods_Postage</item>
        <item name="android:layout_below">@id/iv_line1</item>
        <item name="android:layout_marginTop">11dp</item>
        <item name="android:layout_marginLeft">3dp</item>
        <item name="android:textSize">10sp</item>
    </style>
    <!--商品详情页商品提供服务图标（ImageView）-->
    <style name="Goods_serviceIv">
        <item name="android:layout_width">9dp</item>
        <item name="android:layout_height">9dp</item>
        <item name="android:layout_below">@id/iv_line1</item>
        <item name="android:layout_marginTop">12dp</item>
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:background">@mipmap/icon_service</item>
    </style>
</resources>
